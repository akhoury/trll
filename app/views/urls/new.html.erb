<script>
$(document).ready(function(){
  toggleFunOptions();
  $('#fun-yo').on('change click', function(){
    toggleFunOptions();
    }); 
  });
  function toggleFunOptions(){
    if ($('#fun-yo').is(':checked')){
      $('#fun-options').show('slow');
    }
    else {
      $('#fun-options').hide('slow');
    }
  }   
</script>

<h1>Add a new URL</h1>
<%= form_for @short_url do |f| %>
  <p>
    <%= f.label :url, "Your URL:" %>
    <%= f.text_field :url %>    
  </p>
  <p>
  <%= f.label :fun, "troll? yea wth" %>
  <%= f.check_box :fun, :id => "fun-yo" %>
  </p>
  <div id="fun-options">
  <p>
  Enter an alternate url, and I will alternate the url-redirect everytime someone hits the short url.
  Very useful in forums, fb posts or tweets - I recommend something completely irrelevant, maybe [nsfw], I don't care, (I'm not responsible for content or resulted rage)</p> 
  Sit back and watch people <img src="/assets/head_exploding.gif"></img><br/>
  <%= f.label :alt_url, "Alternate Url:" %>
  <%= f.text_field :alt_url %>
  </div>
  <% if @short_url.errors[:url].any? %>
    <p class='error-messages'>
      The given url <%= @short_url.errors[:url].to_sentence %>.
    </p>
  <% end %>
  <p class='buttons'>
    <%= f.submit "Shorten my URL" %>
  </p>
<% end %>
